# FDA 營養資料庫抓取與分析系統 - 環境變數範例
# 複製此檔案為 .env 並填入實際值

# Azure Computer Vision API 設定
# 從 Azure Portal 獲取您的 Computer Vision 資源端點和金鑰
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key-here

# FDA 資料抓取設定
# 抓取間隔時間 (秒)，避免對伺服器造成過大負擔
FDA_SCRAPER_DELAY=2

# 最大抓取頁數，建議不要超過 50 頁
FDA_MAX_PAGES=20

# 最大詳細資訊抓取數量，建議不要超過 100
FDA_MAX_DETAILS=50

# 應用程式設定
# 是否啟用詳細日誌
DEBUG_MODE=true

# 是否啟用快取功能
ENABLE_CACHE=true

# 快取過期時間 (小時)
CACHE_EXPIRY_HOURS=24

# 資料庫設定
# FDA 營養資料庫檔案路徑
FDA_DB_PATH=fda_nutrition_db.json

# 本地營養資料庫檔案路徑
LOCAL_DB_PATH=local_nutrition_db.json

# 輸出設定
# 輸出目錄
OUTPUT_DIR=output

# 是否自動備份資料庫
AUTO_BACKUP=true

# 備份保留天數
BACKUP_RETENTION_DAYS=7

# 網路設定
# 請求超時時間 (秒)
REQUEST_TIMEOUT=30

# 最大重試次數
MAX_RETRIES=3

# 重試間隔時間 (秒)
RETRY_DELAY=5

# 使用者代理字串
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# 健康評分設定
# 健康評分權重設定
HEALTH_SCORE_WEIGHTS={
  "calories": 0.2,
  "protein": 0.25,
  "carbs": 0.2,
  "fat": 0.15,
  "fiber": 0.2
}

# 營養素閾值設定
NUTRITION_THRESHOLDS={
  "min_protein": 10,
  "max_carbs": 50,
  "max_fat": 20,
  "min_fiber": 3
}

# 日誌設定
# 日誌等級 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日誌檔案路徑
LOG_FILE=logs/fda_scraper.log

# 是否輸出到控制台
LOG_TO_CONSOLE=true

# 測試設定
# 是否啟用測試模式
TEST_MODE=false

# 測試資料目錄
TEST_DATA_DIR=test_data

# 效能監控
# 是否啟用效能監控
ENABLE_PERFORMANCE_MONITORING=true

# 效能監控間隔 (秒)
PERFORMANCE_MONITOR_INTERVAL=60 